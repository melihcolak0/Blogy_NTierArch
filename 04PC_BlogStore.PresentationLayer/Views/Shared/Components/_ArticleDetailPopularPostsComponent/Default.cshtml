@model List<Article>
<div class="sidebar-box">
    <h3 class="heading">Son Makaleler</h3>
    <div class="post-entry-sidebar">
        <ul>
            @foreach(var item in Model)
            {
                <li>
                    <a href="/Article/ArticleDetail/@item.Slug">
                        <img src="@item.ImageUrl" alt="Image placeholder" class="me-4 rounded" style="width: 125px; height: 85px;">
                        <div class="text">
                            <h4>@item.Title</h4>
                            <div class="post-meta">
                                <span class="mr-2">@item.CreatedDate.ToString("dd MMM yy - HH:mm")</span>
                            </div>
                        </div>
                    </a>
                </li>
            }      
        </ul>
    </div>
</div>
